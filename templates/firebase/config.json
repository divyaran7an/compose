{
  "name": "firebase",
  "displayName": "Firebase Integration",
  "description": "Firebase integration with authentication, Firestore database, and real-time features using Firebase SDK v9+",
  "packages": [
    { "name": "firebase", "version": "^10.0.0" },
    { "name": "next", "version": "^14.0.0" },
    { "name": "react", "version": "^18.0.0" },
    { "name": "react-dom", "version": "^18.0.0" },
    { "name": "class-variance-authority", "version": "^0.7.1" },
    { "name": "clsx", "version": "^2.0.0" },
    { "name": "tailwind-merge", "version": "^2.0.0" },
    { "name": "lucide-react", "version": "^0.263.1" },
    { "name": "@radix-ui/react-slot", "version": "^1.1.0" },
    { "name": "@radix-ui/react-tabs", "version": "^1.1.0" },
    { "name": "@radix-ui/react-select", "version": "^2.1.0" },
    { "name": "@radix-ui/react-switch", "version": "^1.1.0" },
    { "name": "@radix-ui/react-separator", "version": "^1.1.0" },
    { "name": "@radix-ui/react-avatar", "version": "^1.1.0" },
    { "name": "@radix-ui/react-label", "version": "^2.1.0" }
  ],
  "devPackages": [
    { "name": "@types/node", "version": "^20.0.0" },
    { "name": "@types/react", "version": "^18.0.0" },
    { "name": "@types/react-dom", "version": "^18.0.0" },
    { "name": "typescript", "version": "^5.0.0" },
    { "name": "tailwindcss", "version": "^3.3.0" },
    { "name": "tailwindcss-animate", "version": "^1.0.7" },
    { "name": "autoprefixer", "version": "^10.4.16" },
    { "name": "postcss", "version": "^8.4.31" }
  ],
  "envVars": [
    { "name": "NEXT_PUBLIC_FIREBASE_API_KEY", "description": "Firebase API key for client-side authentication", "required": true },
    { "name": "NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN", "description": "Firebase authentication domain", "required": true },
    { "name": "NEXT_PUBLIC_FIREBASE_PROJECT_ID", "description": "Firebase project ID", "required": true },
    { "name": "NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET", "description": "Firebase storage bucket URL", "required": true },
    { "name": "NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID", "description": "Firebase messaging sender ID", "required": true },
    { "name": "NEXT_PUBLIC_FIREBASE_APP_ID", "description": "Firebase application ID", "required": true }
  ],
  "files": {
    "firebase.tsx": "src/pages/firebase.tsx",
    "firebase-config.ts": "src/lib/firebase/config.ts",
    "firebase-auth.ts": "src/lib/firebase/auth.ts",
    "firebase-firestore.ts": "src/lib/firebase/firestore.ts",
    "firebase-index.ts": "src/lib/firebase/index.ts",
    "AuthExample.tsx": "src/components/AuthExample.tsx",
    "FirestoreExample.tsx": "src/components/FirestoreExample.tsx",
    "README.md": "README.md"
  }
} 